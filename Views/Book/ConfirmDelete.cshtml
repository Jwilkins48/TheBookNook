@model ConfirmDeleteViewModel
@{
    ViewData["Title"] = "Confirm Delete";
    var book = Model;
}

<h1>Delete @book.BookTitle?</h1>
<p>Are you sure you want to delete @book.BookTitle?</p>
<p>This action cannot be undone.</p>

<form asp-action="DeleteBook" asp-controller="Book" asp-route-id="@book.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete book</button>
</form>