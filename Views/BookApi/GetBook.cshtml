@using System.Text.RegularExpressions
@model BookApi
@{
    ViewData["Title"] = "Random Book";

}

<div class="d-flex justify-content-between align-items-center">
    <h2 class="mb-3">Book of the Day</h2>
    <a class="btn btn-outline-warning suggest" href="/apiBooks">Suggest new book</a>
</div>

<div>
    <div class="d-flex align-items-center gap-2">
        <h1 class="text-warning">@Model.VolumeInfo!.Title</h1>
        <h2>(@Model.VolumeInfo.PublishedDate)</h2>
    </div>
    <p class="mb-0"><span class="text-warning">Written by </span>@Model.VolumeInfo.Authors[0]</p>


    <div>
        <div class="d-flex">
            <img style="max-width:15rem;" class="rounded aside ps-0" src=@Model.VolumeInfo.ImageLinks?.SmallThumbnail
                alt="Book Cover">
            <div class="main">
                <h4 class="text-warning">Description</h4>

                <p style="line-height:1.5rem">@Regex.Replace(@Model.VolumeInfo.Description, "<.*?>", String.Empty)</p>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex gap-4">
                <div>
                    <h5 class="mt-3 text-warning">Published by</h5>
                    <p>@Model.VolumeInfo.Publisher</p>
                </div>

                <div>
                    <h5 class="mt-3 text-warning">Genre</h5>
                    @Model.VolumeInfo.Categories[0]
                </div>
            </div>
            <a class="btn btn-outline-warning" href="/books">View All Books</a>
        </div>
    </div>