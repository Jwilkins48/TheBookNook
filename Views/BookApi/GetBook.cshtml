@model BookApi
@{
    ViewData["Title"] = "Random Book";
}

<div class="d-flex">
    <h2 class="mb-3">Book of the Day</h2>
    <a class="btn text-warning suggest" href="/apiBooks">Suggest new book</a>
</div>

<div>
    <div class="d-flex align-items-center gap-2">
        <h1 class="text-warning">@Model.VolumeInfo!.Title</h1>
        <p>(@Model.VolumeInfo.PublishedDate)</p>
    </div>
    <p><span class="text-warning">Written by </span>@Model.VolumeInfo.Authors[0]</p>

    <div>
        <div>

            <img class="rounded shadow" src=@Model.VolumeInfo.ImageLinks?.SmallThumbnail alt="Book Cover">
            <div>
                <h4 class="mt-3 text-warning">Description</h4>

                <p>@Model.VolumeInfo.Description</p>
            </div>

            <div>
                <h5 class="mt-3 text-warning">Published by</h5>
                <p>@Model.VolumeInfo.Publisher</p>
            </div>


            <div>
                <h4 class="mt-3 text-warning">Genre</h4>
                @foreach (var Category in Model.VolumeInfo.Categories)
                {
                    <p>@Category</p>
                }
            </div>
        </div>

        <a class="btn btn-outline-warning mt-4" href="/books">View All Books</a>
    </div>