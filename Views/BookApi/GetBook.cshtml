@model BookApi
@{
    ViewData["Title"] = "Random Book";
}

<h1>Book Suggestions</h1>

<h1>@Model.VolumeInfo!.Title</h1>
<h2>@Model.VolumeInfo.Publisher</h2>
<p>@Model.VolumeInfo.PublishedDate</p>

<img src=@Model.VolumeInfo.ImageLinks?.SmallThumbnail alt="Book Cover">

<h4 class="mt-3">Description</h4>
<p>@Model.VolumeInfo.Description</p>

<h4>Authors</h4>
@foreach (var author in Model.VolumeInfo.Authors)
{
    <li>@author</li>
}

<h4 class="mt-3">Categories</h4>
@foreach (var Category in Model.VolumeInfo.Categories)
{
    <li>@Category</li>
}